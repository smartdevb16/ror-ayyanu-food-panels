<div class="row wrapper border-bottom white-bg page-heading">
	<div class="col-sm-8">
		<h2>Material Control >> Recipe >> Edit</h2>
	</div>

	<div class="col-sm-4">
		<span class="pull-right">
			<h2><%= link_to 'Back <i class="fa fa-arrow-circle-right"></i>'.html_safe, inventory_restaurant_recipes_path, class: "btn btn-danger" %></h2>
		</span>
	</div>
</div>
<br>

<div class="container">
	<div class="panel panel-primary">
		<div class="panel-heading">
			<h3 class="text-center">Edit Recipe</h3>
		</div>

		<div class="panel-body">
			<%= form_for @recipe, url: inventory_restaurant_recipe_path do |f| %>
			<%= render 'form_fields', f: f %>
			<div class="row form-group">
				<center><%= f.submit "Update Recipe", class: "btn btn-success btn-sm" %></center>
			</div>
			<% end %>
		</div>
	</div>
</div>

<script type="text/javascript">
	$(document).ready(function () {
	  $(".add-article").select2();
	});
	$('form').on('cocoon:after-insert', function() {
      $(".add-article").select2();
    });
	<% if flash[:success].present? %>
	swal("Success", "<%= flash[:success] %>", "success")
	<% elsif flash[:error].present? %>
	swal("Error", "<%= flash[:error] %>", "error")
	<% end %>
</script>
