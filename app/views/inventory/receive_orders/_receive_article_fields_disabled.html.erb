<div class='nested-fields'>
  <div class="row form-group">
    <div class="col-sm-2">
      <%= f.label :article_id %>
    </div>

    <div class="col-sm-10">
      <%= f.hidden_field :article_id %>
      <%= f.collection_select :article_id, @restaurant.articles, :id, :purchase_details, {prompt: 'Choose Article'}, {class: "form-control add-article", required: true, disabled: true} %>
    </div>
  </div>
  <div class="row form-group">
    <div class="col-sm-2">
      <%= f.label :quantity %>
    </div>
    <div class="col-sm-10">
      <%= f.text_field(:quantity, required: true, class: "form-control") %>
    </div>
  </div>
  <div class="row form-group">
    <div class="col-sm-2">
      <%= f.label :rate %>
    </div>
    <div class="col-sm-10">
      <%= f.text_field(:rate, required: true, readonly: true, class: "form-control") %>
    </div>
  </div>
  <div class="row form-group">
    <div class="col-sm-2">
      <%= f.label :discount %>
    </div>
    <div class="col-sm-10">
      <%= f.text_field(:discount, class: "form-control") %>
    </div>
  </div>
  <div class="row form-group">
    <div class="col-sm-2">
      <%= f.label :expiry %>
    </div>

    <div class="col-sm-3">
      <%= f.date_field(:expiry, required: true, class: "form-control") %>
    </div>
  </div>
  <hr style="border: 1px solid;">
</div>