<div class="modal fade" id='reset-password' role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header" style="padding-bottom: none !important;">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title"><center>Reset Password</center></h4>
      </div>

      <div class="modal-body">
        <%= hidden_field_tag(:user_id, "", id: "transporter_id") %>

        <div class="row">
          <div class="col-xs-12 col-md-12">
            <label>New Password</label>
            <%= password_field_tag(:password, "", class: "form-control", id: "new_password", placeholder: "New Password") %>
          </div>
        </div>

        <div class="row">
          <div class="col-xs-12 col-md-12">
            <label>Repeat Password</label>
            <%= password_field_tag(:confirm_password, "", class: "form-control", id: "confirm_password", placeholder: "Repeat Password") %>
          </div>
        </div>

        <br><button class="btn btn-primary btn-md pull-right" id="update_driver_password">Reset Password</button><br>
      </div>
    </div>
  </div>
</div>