<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-sm-8">
    <h2>Reset Password</h2>
  </div>
</div>
<br>

<div class="container">
  <div class="panel panel-primary">
    <div class="panel-heading">
      <h3 class="text-center">Reset Password for <b><%= @user.name %></b></h3>
    </div>

    <div class="panel-body">
      <%= form_tag change_role_user_password_path, html: { multipart: true }, method: :post do |f| %>
        <%= hidden_field_tag(:user_id, @user.id) %>

        <div class="form-group">
          <label>New Password</label>
          <%= password_field_tag(:password, "", required: true, class: "form-control", id: "new_password", placeholder: "New Password") %>
        </div>

        <div class="form-group">
          <label>Repeat Password</label>
          <%= password_field_tag(:confirm_password, "", required: true, class: "form-control", id: "confirm_password", placeholder: "Repeat Password") %>
        </div>

        <div class="form-group">
          <%= submit_tag "Reset Password", class: "btn theme-btn pull-right btn-danger", id: "role_user_password_update", data: { confirm: "Are you sure?" } %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<script type="text/javascript">
  <% if flash[:success].present? %>
    swal("Success", "<%= flash[:success] %>", "success")
  <% elsif flash[:error].present? %>
    swal("Error", "<%= flash[:error] %>", "error")
  <% end %>
</script>