

<style type="text/css">
  .product-imitation {
  text-align: center;
  padding: 18px 0;
  background-color: #f8f8f9;
  color: #bebec3;
  font-weight: 600;
  }
  .product-name {
  font-size: 12px;
  font-weight: 600;
  color: #676a6c;
  display: block;
  margin: 2px 0 5px 0;
  }
  .icheckbox_square-green {
  background-position: 0 0;
  }
  .icon_cross{
  color: #FF0000;
  }
  .icon_check{
  color: #228B22;
  }
</style>
<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-12">
    <h2>Profile</h2>
  </div>
  <!-- <div class="col-lg-2">
    </div> -->
</div>
<div class="wrapper wrapper-content">
  <div class="row animated fadeInRight">
    <div class="col-lg-4 col-md-12">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <h5>Profile Details</h5>
        </div>
        <div>
          <div class="ibox-content no-padding border-left-right" >
            <center><img alt="image" class="img-responsive" src="<%=@user.image.present? ? @user.image : "/assets/user.png" %>" style="width:130px;height: 135px;margin-top:5px;"></center>
            <center>
              <h3><strong><%=@user.name%></strong></h3>
            </center>
            <center>
              <p><strong>User Name:</strong> <%=@user.user_name.present? ? @user.user_name : "N/A"%></p>
            </center>
            <center>
              <address>
                <strong><i class="fa fa-envelope"></i> <%=@user.email%></strong><br>
                <%#=user.name%>
                <%#=user.name%>
                <abbr title="Phone">P:</abbr> <%=@user.contact.present? ? @user.contact : "Not Available"%>
              </address>
            </center>
          </div>
        </div>
      </div>
    </div>
    <div class="col-lg-8 col-md-12">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <h5>Orders</h5>
        </div>
        <div class="ibox-content table-responsive">
          <%if @transactions.present?%>
          <table class="table table-bordered">
            <thead>
              <tr>
                <th>ID</th>
                <th>Restaurant Name</th>
                <th>Address</th>
                <th>Order Id</th>
                <th>Total Amount (<%= @restaurant.currency_code_en %>)</th>
                <th>Point</th>
                <th>Point Type</th>
                <th>Action</th>
              </tr>
            </thead>
            <tbody>
            <%@transactions.each do |b|%>
              <tr id="card-<%=b.id%>">
                <td><%=b.id%></td>
                <td><%=@restaurant.title%></td>
                <td><%=b.branch.address%></td>
                <td><%=b.order_id%></td>
                <td><%=b.order.total_amount%></td>
                <td><%=b.user_point%></td>
                <td><b><%=b.point_type%></b></td>
                <td>
                  <a href="<%=order_path(encode_token(b.id))%>" class="btn btn-xs btn-primary" style="font-size: 13px; color: white;"><i class="fa fa-eye" aria-hidden="true"> View </i> </a>
                </td>
              </tr>
              <%end%>
            </tbody>
          </table>
          <%else%>
          <div class="alert alert-danger text-center">No record available yet.</div>
          <%end%>
        </div>
        <div class="col-lg-12">
         <center> <%= will_paginate @transactions ,renderer: BootstrapPagination::Rails %></center><br>
       </div>
      </div>
    </div>
  </div>
</div>
