<link rel="stylesheet" href="/assets/intlTelInput.css">
<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-sm-8">
    <h2>Reject User</h2>
  </div>
</div>
<br>

<div class="container">
  <div class="panel panel-primary">
    <div class="panel-heading">
      <h3 class="text-center">Reject User</h3>
    </div>

    <div class="panel-body">
      <%= form_for @user,url: update_role_user_reject_path(:id=>params[:id]), html: { multipart: true, class: "form-horizontal", autocomplete: "off" } do |f| %>
       
        <div class="row form-group">
          <div class="col-sm-12">
            <%= f.label :reject_reason, "Reject Reason" %>
            <%= f.text_area(:reject_reason, placeholder: "Enter Reject Reason", required: true, class: "form-control") %>
          </div>
        </div>

       
        <div class="row form-group">
          <center><%= f.submit "Reject Role User", class: "btn btn-success btn-sm", id: "update_role" %></center>
        </div>
      <% end %>
    </div>
  </div>
</div>


<script type="text/javascript" src="/assets/telinput/intlTelInput.js"></script>

<script type="text/javascript">
  <% if flash[:success].present? %>
    swal("Success", "<%= flash[:success] %>", "success")
  <% elsif flash[:error].present? %>
    swal("Error", "<%= flash[:error] %>", "error")
  <% end %>
</script>