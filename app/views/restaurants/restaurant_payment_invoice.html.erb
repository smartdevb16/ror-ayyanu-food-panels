<div class="row print" id="print_page" >
  <div class="col-lg-12">
    <div class="wrapper wrapper-content animated fadeInRight">
      <div class="ibox-content p-xl table-responsive">
        <div class="row">
          <div class="col-sm-6">
           <!--  <h5 class="inline">Order Id :</h5>  <%#=@invoice["id"]%> -->
            <address>
            <h5 class="inline">Restaurant Name :</h5> 
            <strong><%=@invoice[:restaurant_title]%></strong><br>
            </address>             
          </div>
        </div>
        <div class="table-responsive m-t">
          <table class="table invoice-table">
            <thead>
              <tr>
                <th>Restaurant Owner Name</th>
                <th>Restaurant Name</th>
                <th>Total Amount (BD)</th>
              </tr>
            </thead>
            <tbody>             
              <tr>            
                <td>
                  <div><strong><%=@restaurant.user.name%></strong></div>              
                </td>
                <td><%=@restaurant.title%></td>
                <td><%=@invoice[:amount]%></td>
              </tr>  
              <%#end%>              
            </tbody>
          </table>
        </div>
        <!-- /table-responsive -->
        <table class="table invoice-total">
          <tbody>
            <tr>
              <td><strong>Sub Total :</strong></td>
              <td><%=@invoice[:amount]%></td>
            </tr>
             <tr>
              <td><strong>Branch Fee :</strong></td>
              <td><%=(number_with_precision(@invoice[:branch_fee], :precision => 3) || 0.000)%></td>
            </tr>
            <tr>
              <td><strong>Advertisement Fee :</strong></td>
              <td><%=(number_with_precision(@invoice[:vat], :precision => 3) || 0.000)%></td>
            </tr>
             <tr>
              <td><strong>Report Fee :</strong></td>
              <td><%=(number_with_precision(@invoice[:fee], :precision => 3) || 0.000)%></td>
            </tr>

            <tr>
              <td><strong>TOTAL :</strong></td>
              <td><%=(number_with_precision(@invoice[:total_amount], :precision => 3) || 0.000)%></td>
            </tr>
          </tbody>
        </table>
       
