<div class="container">
  <%#= render :partial=>'admin_steps'%>
  <%=form_for :info,url: scraped_menu_data_path,:html=>{id: "add-owner-form",:class=>"form-horizontal",:multipart => true} do |f|%>
    <div class="row setup-content" id="step-1">
      <div class="col-lg-12">
        <div class="panel panel-default" style="margin-bottom:5%;">
          <div class="panel-heading"><center><h3>Restaurant Add Menu</h3></center></div>
          <div class="panel-body">
            <div class="row mb-2">
              <div class="col-xs-12 col-sm-6 col-md-12 col-lg-12">
                <label>Restaurant Name</label>
                <input type="text" name="restaurant_name" placeholder="Restaurant Name" class="form-control" value="<%=@restaurant.title%>"
                readonly>
                <input type="hidden" name="restaurant_id" value="<%=params[:restaurant_id]%>">
              </div>
            </div>
            <div class="row mb-2" style="padding: 0px 20px;">
            <!-- <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">  -->
             <p style="margin: 0 0 10px;color: #676a6c;font-weight: bold;font-size: 12px;">Html Code</p>
              <%= f.text_area :content ,cols:"117",rows:"40"%>
            <!-- </div>     -->
            </div>
            <button type="submit" class="btn btn-primary pull-right" id="saveBtn"> <strong>Update</strong> </button>
          </div>
        </div>
      </div>
    </div>
  <%end%>
</div>
