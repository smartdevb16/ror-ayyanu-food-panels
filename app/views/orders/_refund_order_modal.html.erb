<div class="modal fade" id="refund_order_modal" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <center><div id="showimage"></div></center>
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Notes</h4>
      </div>

      <%= form_tag admin_refund_order_path do %>
        <div class="modal-body">
          <%= hidden_field_tag(:order_id, "") %>
          <%= hidden_field_tag(:status, "") %>

          <div class="row" style="margin-bottom:10px;">
            <p>Notes</p>
            <%= text_area_tag(:refund_notes, "", placeholder: "Notes", class: "form-control", required: true, autocomplete: :off) %>
          </div>

          <div class="row refund-fault-row" style="margin-bottom:10px;">
            <p>Whose Fault?</p>
            <%= select_tag(:refund_fault, options_for_select(["Brand", "Driver"]), class: "form-control", style: "height: 35px;") %>
          </div>

          <div class="row no-refund-fault-row" style="margin-bottom:10px;">
            <p>Whose Fault?</p>
            <%= select_tag(:refund_fault, options_for_select(["Brand", "Driver", "Customer"]), class: "form-control", style: "height: 35px;") %>
          </div>

          <div class="modal-footer">
            <button type="button" class="btn btn-danger pull-right" style="margin-left:4px" data-dismiss="modal">Cancel</button>
            <%= submit_tag "Submit", class: "btn btn-success" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>