<style type="text/css">
  .setheight{
    height:100% !important;
  }
  .form-group{
    width: 100%;
    margin-bottom: 15px !important;
  }
</style>

<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-12" style="height: 4%;">
    <div class="col-lg-3 col-md-12">
      <h2>Contact List</h2>
    </div>
   
  </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
        <h5>Contacts Table</h5>
        </div>
        <div class="ibox-content table-responsive">
          <% if @contacts.present? %>
            <table class="table table-bordered">
              <thead>
                <tr>
                  <th>ID</th>
                  <th>Email</th> 
                  <th>Name</th>
                  <th>Message</th>             
                </tr>
              </thead>
              <tbody>
                <%@contacts.each do |b|%>
                  <tr id="card-<%=b.id%>">
                    <td><%=b.id%></td>
                    <td><%=b.email%></td>
                    <td><%=b.full_name%></td>
                    <td><%=b.message%></td> 
                    
                  </tr>
                <%end%>
              </tbody>
            </table>
          <%else%>
            <center><div class="alert alert-danger">No Contact available yet.</div></center>
          <%end%>
        </div>
        <div class="col-lg-12">
         <center> <%= will_paginate @contacts ,renderer: BootstrapPagination::Rails %></center><br>
       </div> 
      </div>
    </div>
  </div>
</div>