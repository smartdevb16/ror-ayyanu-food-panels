<div class="modal fade" id="user_cart_push_notification_modal" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Send Push Notification</h4>
      </div>

      <%= form_tag send_user_cart_push_notification_path do %>
        <div class="modal-body">
          <%= hidden_field_tag(:cart_ids, @cart_ids) %>

          <div class="row">
            <p>
              <% if @cart_ids.size == 1 %>
                User: <b><%= Cart.find(@cart_ids.first).user&.name %></b>
              <% else %>
                <b>All Users</b>
              <% end %>
            </p>
          </div>

          <hr>

          <div class="row">
            <%= label_tag :title %>
            <%= text_field_tag(:title, "", placeholder: "Enter title", class: "form-control", required: true, autocomplete: :off) %>
          </div>

          <div class="row">
            <%= label_tag :description %>
            <%= text_area_tag(:description, "", placeholder: "Enter description", class: "form-control", required: true, autocomplete: :off) %>
          </div>
        </div>

        <div class="modal-footer">
          <%= submit_tag "Send Push Notification", class: "btn btn-success" %>
          <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
        </div>
      <% end %>
    </div>
  </div>
</div>