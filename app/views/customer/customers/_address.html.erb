<div class="tab-pane fade" id="address">
  <div class="tabs-wrp brd-rd5">
    <h4 itemprop="headline">MY ADDRESSES</h4>
    <a href="#" class="new-dashboard-address"><h5 class="pull-right red-clr"><i class="fa fa-plus-circle"></i> New Address</h5></a>

    <div class="restaurants-list">
      <% if @addresses.present? %>
        <% @addresses.each do |address| %>
          <div class="featured-restaurant-box style3 brd-rd5">
            <div class="featured-restaurant-info">
              <h4 itemprop="headline">
                <a><%= address.address_name %></a>
              </h4>

              <ul class="post-meta">
                <li style="display: block;">Area: <%= address.coverage_area&.area %></li>
                <li style="display: block;">Block: <%= address.block %></li>
                <li style="display: block;">Mobile: <%= address.contact %></li>
              </ul>
            </div>

            <div>
              <ul class="post-meta">
                <li style="display: block; font-size: 14px;"><%= link_to '<i class="fa fa-edit"></i>'.html_safe + " Edit", "#", class: "edit-dashboard-address", data: { id: address.id }  %></li>
                <li style="display: block; font-size: 14px;"><%= link_to '<i class="fa fa-trash"></i>'.html_safe + " Delete", "#", class: "remove-dashboard-address", data: { id: address.id }  %></li>
              </ul>
            </div>
          </div>
        <% end %>
      <% else %>
        <h4>No Address Present</h4>
      <% end %>
    </div>
  </div>
</div>