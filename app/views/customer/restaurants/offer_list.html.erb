<div class="customer-dashboard">
  <main>
    <section>
      <div class="block less-spacing gray-bg top-padd30">
        <div class="container">
          <div class="row">
            <div class="col-md-12 col-sm-12 col-lg-12">
              <div class="sec-box">
                <div class="dashboard-tabs-wrapper">
                  <div class="row">
                    <div class="col-xs-12">
                      <div class="tab-content">
                        <div class="tab-pane fade in active" id="shortlists">
                          <div class="tabs-wrp brd-rd5">
                            <h4 itemprop="headline">SWEET DEALS FROM RESTAURANTS</h4>

                            <div class="restaurants-list">
                              <% if @offers.present? %>
                                <% @offers.each do |offer| %>
                                  <div class="featured-restaurant-box style3 brd-rd5">
                                    <div class="featured-restaurant-thumb">
                                      <%= link_to customer_restaurants_list_path(restaurant_id: encode_token(offer.branch.restaurant_id)) do %>
                                        <%= image_tag(offer.branch.image) %>
                                      <% end %>
                                    </div>

                                   <div class="featured-restaurant-info">
                                      <span class="red-clr"><b><%= offer.offer_title.to_s.upcase %>:</b> <%= offer.discount_percentage %>% OFF</span>

                                      <h4 itemprop="headline">
                                        <%= link_to offer.branch.restaurant.title, customer_restaurants_list_path(restaurant_id: encode_token(offer.branch.restaurant_id)) %>
                                      </h4>

                                      <ul class="post-meta">
                                        <li><i class="fa fa-map-marker"></i> <%= offer.branch.address %></li>
                                      </ul>
                                    </div>
                                  </div>
                                <% end %>
                              <% else %>
                                <h4>No Sweet Deals Present Now</h4>
                              <% end %>
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>
</div>