<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-12">
    <div class="col-sm-3">
      <h2 class="font-bold ">Assign Task</h2>
    </div>
  </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row white-bg">
    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-title" style="border:none;">
          <div class="ibox-tools">
            <a class="dim btn btn-primary btn-circle" title="Add New Asset Type" href="<%= new_business_task_management_restaurant_assign_task_path(restaurant_id: params[:restaurant_id]) %>"> <i class="fa fa-plus" aria-hidden="true"></i>
            </a>
          </div>
        </div>
        <div class="ibox-content">
          <% if @assign_tasks.present? %>
          <div class="full-height-scroll">
           <div class="table-responsive">
            <table class="table table-striped table-hover">
              <thead>
                <tr>
                  <th>ID</th>
                  <th>Countries</th>
                  <th>Branch</th>
                  <th>Department</th>
                  <th>Designation</th>
                  <th>Employee</th>
                  <th>Task List</th>
                  <th>Assign Date/Time</th>
                  <th>Created By</th>
                  <th>Created At</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                <% @assign_tasks.each do |assign_task| %>
                <tr id="trans-<%=assign_task.id %>">
                  <td id="<%= assign_task.id %>-id "><%= assign_task.id%></td>
                  <td id="<%= assign_task.id %>-id "><%= find_assign_task_country(assign_task) %></td>
                  <td id="<%= assign_task.id %>-id "><%= find_assign_task_branch(assign_task) %></td>
                  <td id="<%= assign_task.id %>-id "><%= find_assign_task_department(assign_task) %></td>
                  <td id="<%= assign_task.id %>-id "><%= find_assign_task_designation(assign_task) %></td>
                  <td id="<%= assign_task.id %>-id "><%= find_assign_task_employee(assign_task) %></td>
                  <td id="<%= assign_task.id %>-id "><%= find_assign_task_task_list(assign_task) %></td>

                  <td id="<%= assign_task.id %>-id "><%= assign_task.assign_date_time %></td>

                  <td><%= created_by(assign_task) %></td>
                  <td id="<%=assign_task.id %>-id"><%=assign_task.created_at.strftime("%d/%m/%Y")%></td>
                  
                  
                  
                  
                  <td>
                    <%= link_to '<i class="fa fa-pencil"></i> Edit Assign Task'.html_safe, edit_business_task_management_restaurant_assign_task_path(assign_task,restaurant_id: params[:restaurant_id]), class: 'btn btn-warning btn-sm' %>
                    <%= link_to '<i class="fa fa-remove"></i> Remove Assign Task'.html_safe, business_task_management_restaurant_assign_task_path(assign_task,restaurant_id: params[:restaurant_id]), method: :delete, confirm: 'Are you sure?', class: 'btn btn-danger btn-sm' %>
                  </td>
                </tr>
                <%end%>
              </tbody>
            </table>
          </div>
        </div>
        <%else%>
        <center><div class="alert alert-danger">No Assign Task available yet.</div></center>
        <%end%>
      </div>
    </div>
  </div>
</div>
</div>

<script type="text/javascript">
  <%if flash[:success].present?%>
    swal("Done!", "<%=flash[:success]%>", "success");
  <%elsif flash[:error].present?%>
    swal("warning","<%=flash[:error]%>","warning");
  <%end%>
</script>
