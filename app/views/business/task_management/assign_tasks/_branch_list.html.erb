<%= select_tag(:branch_ids, options_from_collection_for_select(@branches, :id, :address), {id: "assign_task_branch_ids", class: 'form-control setheight', style: 'height: 40px!important;', multiple: true, required: true, name: 'assign_task[branch_ids][]'}) %>
<script type="text/javascript">
	$("#assign_task_branch_ids").select2({
  	placeholder: "Select Branch",
  	allowClear: true
	});

	$("#assign_task_branch_ids").change(function(){
		var branch_ids = $('select#assign_task_branch_ids').val();


		$.ajax({
		  type: "GET",
		  url: "<%= find_task_list_based_branch_business_task_management_restaurant_assign_tasks_path(restaurant_id: params[:restaurant_id]) %>",
		  data: { branch_ids: branch_ids, restaurant_id: $('#assign_task_restaurant_id').val() }
		})

	})
</script>