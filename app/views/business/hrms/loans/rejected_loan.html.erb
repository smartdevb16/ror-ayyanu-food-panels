<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-xs-6">
    <h2 class="font-bold ">Rejected Loans </h2>
  </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row white-bg">
    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-title" style="border:none;">
          <!-- <div class="ibox-tools">
            <a class="dim btn btn-primary btn-circle" title="Add New Card Type" href="<%#= new_business_hrms_loan_path(restaurant_id: params[:restaurant_id]) %>"> <i class="fa fa-plus" aria-hidden="true"></i>
            </a>
          </div> -->
        </div>
        <div class="ibox-content">
          <% if @loans.present? %>
            <div class="full-height-scroll">
             <div class="table-responsive">
              <table class="table table-striped table-hover">
                <thead>
                  <tr>
                    <th>ID</th>
                    <th>Employee</th>
                    <th>Department</th>
                    <th>Designation</th>
                    <th>Loan Date</th>
                    <th>Amount (BHD)</th>
                    <th>Deducted From</th>
                    <th>Interest Rate(%)</th>
                    <th>Created Date</th>
                    <th>Installments</th>
                    <th>Loan Type</th>
                    <!-- <th>Account Number</th> -->

                    <th>Topup amount</th>
                    <th>Loan period</th>
                    <th>New interest rate</th>

                    <th>Remaining Amount (BHD)</th>
                    <th>Settle Date</th>
                    <th>Payment Mode</th>

                    <th>Rejected Reason</th>
                    <th>Type</th>
                    <th>Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <% @loans.each do |loan| %>
                    <tr id="trans-<%=loan.id %>">
                      <td id="<%=loan.id %>-id"><%=loan.id%></td>
                      <td><%= loan.user&.name %></td>
                      <td><%= loan.department %></td>
                      <td><%= loan.designation %></td>
                      <td><%= loan.loan_date %></td>
                      <td><%= amount_three_decimal loan.amount %></td>
                      <td><%= loan.deducted_from %></td>
                      <td><%= amount_three_decimal loan.interest_rate %></td>
                      <td><%= loan.created_date %></td>
                      <td><%= loan.installments %></td>
                      <td><%= loan.loan_type&.name %></td>
                      <!-- <td><%#= loan.account_number %></td> -->
                      <td></td>
                      <td></td>
                      <td></td>
                      <td></td>
                      <td></td>
                      <td></td>
                      <td><%= loan.rejected_reason %></td>
                      <td>Added Loan</td>
            
                      <td>
                        <%= link_to '<i class="fa fa-pencil"></i> Edit Loan'.html_safe, edit_business_hrms_loan_path(loan, restaurant_id: params[:restaurant_id]), class: 'btn btn-warning btn-sm' %>
                        <%= link_to '<i class="fa fa-pencil"></i> Show Detail'.html_safe, business_hrms_loan_path(loan, restaurant_id: params[:restaurant_id]), class: 'btn btn-info btn-sm' %>
                      </td>

                    </tr>
                  <%end%>

                  <% @loan_revises.each do |loan_revise| %>
                    <% loan = loan_revise.loan %>
                    <tr id="trans-<%=loan.id %>">
                      <td id="<%=loan.id %>-id"><%=loan.id%></td>
                      <td><%= loan.user.name %></td>
                      <td><%= loan.department %></td>
                      <td><%= loan.designation %></td>
                      <td><%= loan.loan_date %></td>
                      <td><%= amount_three_decimal loan.amount %></td>
                      <td><%= loan.deducted_from %></td>
                      <td><%= amount_three_decimalloan.interest_rate %></td>
                      <td><%= loan.created_date %></td>
                      <td><%= loan.installments %></td>
                      <td><%= loan.loan_type.name %></td>
                      <!-- <td><%#= loan.account_number %></td> -->

                      <td><%= loan_revise.topup_amount %></td>
                      <td><%= loan_revise.loan_period %></td>
                      <td><%= loan_revise.new_interest_rate %></td>

                      <td><%= loan_revise.rejected_reason %></td>
                      <th>Loan Revise</th>
            
                      <td>
                        <%= link_to '<i class="fa fa-pencil"></i> Edit Loan Revise'.html_safe, edit_business_hrms_loan_revise_path(loan_revise, restaurant_id: params[:restaurant_id]), class: 'btn btn-warning btn-sm' %>
                        <%= link_to '<i class="fa fa-pencil"></i> Show Detail'.html_safe, business_hrms_loan_revise_path(loan_revise, restaurant_id: params[:restaurant_id]), class: 'btn btn-info btn-sm' %>
                      </td>

                    </tr>
                  <%end%>

                  <% @loan_settlements.each do |loan_settlement| %>
                    <% loan = loan_settlement.loan %>
                    <tr id="trans-<%=loan.id %>">
                      <td id="<%=loan.id %>-id"><%=loan.id%></td>
                      <td><%= loan.user.name %></td>
                      <td><%= Department.find_by_id(loan.department)&.name %></td>
                      <td><%= Designation.find_by_id(loan.designation)&.name %></td>
                      <td><%= loan.loan_date %></td>
                      <td><%= amount_three_decimal loan.amount %></td>
                      <td><%= loan.deducted_from %></td>
                      <td><%= amount_three_decimal loan.interest_rate %></td>
                      <td><%= loan.created_date %></td>
                      <td><%= loan.installments %></td>
                      <td><%= loan.loan_type.name %></td>
                      <!-- <td><%#= loan.account_number %></td> -->

                      <td><%#= loan_settlement.topup_amount %></td>
                      <td><%#= loan_settlement.loan_period %></td>
                      <td><%#= loan_settlement.new_interest_rate %></td>
                      <td><%= amount_three_decimal loan_settlement.remaining_amount %></td>
                      <td><%= loan_settlement.when_to_settle_date %></td>
                      <td><%= loan_settlement.payment_mode %></td>
                      <td><%= loan_settlement.rejected_reason %></td>
                      <td>Loan Settlement</td>

                       <td>
                        <%= link_to '<i class="fa fa-pencil"></i> Edit Settelment'.html_safe, edit_business_hrms_loan_settlement_path(loan_settlement, restaurant_id: params[:restaurant_id]), class: 'btn btn-warning btn-sm' %>
                        <%= link_to '<i class="fa fa-pencil"></i> Show Detail'.html_safe, business_hrms_loan_settlement_path(loan_settlement, restaurant_id: params[:restaurant_id]), class: 'btn btn-info btn-sm' %>
                      </td>
            
      
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
        </div>
        <%else%>
          <center><div class="alert alert-danger">No loan list available yet.</div></center>
        <%end%>
      </div>
    </div>
  </div>
</div>
</div>

<script type="text/javascript">
  <%if flash[:success].present?%>
    swal("Done!", "<%=flash[:success]%>", "success");
  <%elsif flash[:error].present?%>
    swal("warning","<%=flash[:error]%>","warning");
  <%end%>
</script>
