<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-xs-6">
    <h2 class="font-bold ">Assign Assets</h2>
  </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row white-bg">
    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-title" style="border:none;">
          <div class="ibox-tools">
            <a class="dim btn btn-primary btn-circle" title="Add New Card Type" href="<%= new_business_hrms_assign_asset_path(restaurant_id: params[:restaurant_id]) %>"> <i class="fa fa-plus" aria-hidden="true"></i>
            </a>
          </div>
        </div>
        <div class="ibox-content">
          <% if @assign_assets.present? %>
          <div class="full-height-scroll">
           <div class="table-responsive">
            <table class="table table-striped table-hover">
              <thead>
                <tr>
                  <th>ID</th>
                  <th>Emloyee</th>
                  <th>Asset Category</th>
                  <th>Asset Status</th>
                  <th>Valid Till</th>
                  <th>Returned On</th>
                  <th>Asset</th>
                  <th>Asset Type</th>
                  <th>Remarks</th>
                  <th>View Image</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                <% @assign_assets.each do |assign_asset| %>
                    <td><%= assign_asset.id %></td>
                    <td><%= assign_asset.user&.name %></td>
                    <td><%= assign_asset.asset_category&.name %></td>
                    <td><%= assign_asset.asset_status %></td>
                    <td><%= assign_asset.valid_till %></td>
                    <td><%= assign_asset.returned_on %></td>
                    <td><%= assign_asset.asset&.name %></td>
                    <td><%= assign_asset.asset_type&.name %></td>
                    <td><%= assign_asset.remarks %></td>
                    <td>
                     <% if assign_asset.picture.present?%>
                  <span id ="document_stage"><%= link_to 'View Image', view_image_business_hrms_assign_asset_path(assign_asset), :class=>"btn btn-primary attach-btn-anchor", :remote => true, 'data-toggle' =>"modal",'data-target' =>'#exampleModal' %></span>
                   <%end%>
                   </td>
                    <td>
                      <%= link_to '<i class="fa fa-pencil"></i> Edit Assign Asset'.html_safe, edit_business_hrms_assign_asset_path(assign_asset, restaurant_id: params[:restaurant_id]), class: 'btn btn-warning btn-sm' %>
                      <%= link_to '<i class="fa fa-remove"></i> Remove Assign Asset'.html_safe, business_hrms_assign_asset_path(assign_asset, restaurant_id: params[:restaurant_id]), method: :delete, confirm: 'Are you sure?', class: 'btn btn-danger btn-sm' %>
                    </td>
                  </tr>
                <%end%>
              </tbody>
            </table>
          </div>
        </div>
        <%else%>
        <center><div class="alert alert-danger">No Assign Asset List available yet.</div></center>
        <%end%>
      </div>
    </div>
  </div>
</div>
</div>


<!-- Modal -->
                        <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">                                                <div class="modal-dialog" role="document">
                            <div class="modal-content" style="width: 900px;right: 15%;">
                              <div class="modal-header">
                                <!-- <h5 class="modal-title" id="exampleModalLabel">Modal title</h5> -->
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                                </button>
                              </div>
                              <div class="modal-body">
              
                              </div>
                              <div class="modal-footer">
                                <!-- <button type="button" class="btn btn-secondary" >Close</button> -->
                                <!-- <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button> -->
                              </div>
                            </div>
                          </div>
                        </div>
                        <!-- model end -->

<script type="text/javascript">
	<%if flash[:success].present?%>
    swal("Done!", "<%=flash[:success]%>", "success");
  <%elsif flash[:error].present?%>
    swal("warning","<%=flash[:error]%>","warning");
  <%end%>
</script>
