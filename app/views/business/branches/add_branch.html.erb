<div>
  <div class="col-sm-12">
    <h2 class="pull-right">
      <% if @user.auths.first.role == "business" %>
        <a href="<%= business_resturant_branch_path(restaurant_id: params[:restaurant_id]) %>"> <button class="btn btn-danger">Back to branch <i class="fa fa-arrow-right"></i> </button></a>
