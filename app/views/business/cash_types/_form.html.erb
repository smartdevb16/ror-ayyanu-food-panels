<div class="form-row" style='margin-top: 25px; margin-left: 25px;width: 98%; background-color: white;'>
    <%= form_for cash_type, url: {action: action} do |f| %>
        <div class="row">
    
            <% if action.eql?('create') %>
                <%= f.hidden_field :created_by_id, value: @user&.id %>
            <% else %>
                <%= f.hidden_field :last_updated_by_id, value: @user&.id %>
            <% end %>
            <div class="col-sm-3">
                <label for="cash_type_name">Currency Name</label>
                <%= f.text_field :pos_cash_type, class: 'form-control', required: true %>
            </div>
            <div class="col-sm-3">
                <label for="cash_type_name">Currency Amount</label>
                <%= f.number_field :amount, class: 'form-control', id: "cash_type_name", min: "0", step: "0.01", required: true %>
            </div>
            <div class="col-sm-3">
                <label for="cash_type_name">Conversion</label>
                <%= f.number_field :converted_amount, class: 'form-control', id: "converted_amount", min: "0", step: "0.01", required: true %>
            </div>
            <div class="col-sm-1">
                <label for="defaultCheck1">Enabled</label>
                <%= f.check_box :is_enabled, class: 'form-check-input', id: 'defaultCheck1', style: 'display: block;' %>
            </div>
            <div class="col-sm-2">
                <button type="submit" class="btn btn-primary mb-2">Submit</button>
            </div>
        </div>
    <% end %>
</div>