<% if transaction.kitchen_instructions.present? %>
<tr class='comment_heading_<%= transaction.id %>'><td></td><td colspan="3" style="padding-left: 15px;">Kitchen Instructions**</td></tr>
<tr class='comment_<%= transaction.id %>'><td></td><td colspan="3" style="padding-left: 15px;" class='kitchen_text'><%= transaction.kitchen_instructions %> | <%= transaction.duration %></td></tr>
<% end %>