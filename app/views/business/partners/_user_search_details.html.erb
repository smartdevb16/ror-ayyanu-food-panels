<div class="modal fade" id="manual_order_search_modal" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Search User</h4>
      </div>

      <%= form_for :search, method: :get, html: { class: "form-inline", remote: true, autocomplete: :off } do |f| %>
        <%= hidden_field_tag(:restaurant_id, params[:restaurant_id]) %>
        <%= hidden_field_tag(:selected_branch_id, "") %>

        <div class="modal-body">
          <div class="row">
            <%= label_tag :search_contact, "Search By Contact No." %><br>
            <%= text_field_tag(:search_contact, "", class: "form-control") %>
          </div>

          <h3 class="text-center">OR</h3>

          <div class="row">
            <%= label_tag :search_email, "Search By Email" %><br>
            <%= email_field_tag(:search_email, "", class: "form-control") %>
          </div>

          <hr>

          <div class="row user-select-div hide">
            <%= label_tag :search_user, "Select User" %><br>
            <span class="user-select-options"></span>
          </div>
        </div>

        <div class="modal-footer">
          <button type="button" class="btn btn-danger pull-left" data-dismiss="modal">New Customer</button>
          <%= submit_tag "Submit", class: "btn btn-success pull-right" %>
        </div>
      <% end %>
    </div>
  </div>
</div>