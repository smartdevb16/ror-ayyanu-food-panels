<style type="text/css">
  .bg-white{
    background-color: white;
  }
  .form-control { 
    margin-bottom: 10px !important;
    height: 40px;
  }
  .setheight{
    height:40px !important;
  }
  .clients-list .tab-pane {
    position: relative;
    max-height: 300px !important; 
  }
</style>

<link rel="stylesheet" href="/assets/intlTelInput.css">

<div class="row white-bg page-heading" style="padding-bottom: 10px;">
  <div class="col-xs-6">
    <h2 style="margin-top:20px;"><b>Busy Areas</b></h2>
  </div>
  <div class="col-xs-6">
    <a style="margin-right: 15px;" href="<%=business_manager_dashboard_path%>"> <button class="btn btn-danger pull-right" style="margin-top: 23px;">Back to Dashboard<i class="fa fa-arrow-right"></i> </button></a>
  </div>  
</div>
<br>


<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row white-bg">    
    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-content" style="border:none;">
          <%if @busy.present?%> 
            <div class="full-height-scroll">
               <div class="table-responsive">
                  <table class="table table-striped table-hover">
                    <thead>
                      <tr>
                        <th>Id</th>
                        <th>Restaurant Name</th>
                        <th>Branch Address</th>
                        <th>Area Name</th>
                        <th>Status</th>
                      </tr>
                    </thead>
                    <tbody>
                      <%@busy.each do |o|%>
                        <tr id="order-<%=o.id%>">
                          <td><p ><%=o.id%></p></td>
                          <td><p ><%=o.branch.restaurant.title%></p></td>
                           <td><%=o.branch.present? ? o.branch.address : 'Not available'%></td>
                          <td><p ><%=o.coverage_area.area%></p></td>
                          <td><%=o.is_busy ==true ? '<label class="label" style=" background-color:#17a2b8; color:white; padding: 3px 23px 3px 22px;">BUSY</label>'.html_safe : "N/A"%></td>                         
                        </tr>
                      <%end%>     
                    </tbody>
                  </table>
               </div>
            </div>
            <div class="col-lg-12">
              <center> <%= will_paginate @busy ,renderer: BootstrapPagination::Rails %></center><br>
            </div> 
          <%else%>
            <center><div class="alert alert-danger">Data not available yet.</div></center>
          <%end%>
        </div>
      </div>
    </div>
  </div>
</div>


