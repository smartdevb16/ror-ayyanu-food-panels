	<div class="row form-group">
		<div class="col-sm-2">
			<%= f.label :name %>
		</div>

		<div class="col-sm-10">
			<%= f.text_field(:name, required: true, class: "form-control") %>
		</div>
	</div>
<%= hidden_field_tag 'restaurant_id', params[:restaurant_id], name: 'asset_group[restaurant_id]' %>

	<%= hidden_field_tag 'restaurant_id', params[:restaurant_id] %><br/>

	<div class="row form-group">
		<% if params[:action] == "edit" %>
			<center><%= f.submit "Update New Asset Type", class: "btn btn-success btn-sm" %></center>
		<% else %>
			<center><%= f.submit "Create New Asset Type", class: "btn btn-success btn-sm" %></center>
		<% end %>
	</div>
<% end %>
