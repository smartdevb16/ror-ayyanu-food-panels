<div class="modal fade" id="add_distance_delivery_charge_modal" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog" role="document">
      <div class="modal-content">
        <center><div id="showimage"></div></center>

        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">Add Distance wise Delivery Charge</h4>
        </div>

        <%= form_for @charge, html: { class: "form-horizontal" } do |f| %>
          <div class="modal-body">
            <% if is_super_admin?(@admin) %>
              <div class="row">
                <div class="col-sm-4">
                  <p>Country</p>
                </div>

                <div class="col-sm-8">
                  <%= f.select(:country_id, options_for_select(Country.pluck(:name, :id)), { prompt: "Select Country" }, { required: true, class: "form-control", style: "height: 34px" }) %>
                </div>
              </div>
            <% end %>

            <div class="row">
              <div class="col-sm-4">
                <p>Min Distance (km)</p>
              </div>

              <div class="col-sm-8">
                <%= f.number_field(:min_distance, class: "form-control", required: true, min: 0, step: 0.001, autocomplete: :off) %>
              </div>
            </div>

            <div class="row">
              <div class="col-sm-4">
                <p>Max Distance (km)</p>
              </div>

              <div class="col-sm-8">
                <%= f.number_field(:max_distance, class: "form-control", required: true, min: 0, step: 0.001, autocomplete: :off) %>
              </div>
            </div>

            <div class="row">
              <div class="col-sm-4">
                <% if is_super_admin?(@admin) %>
                  <p>Charge <span class="currency"></span></p>
                <% else %>
                  <p>Charge <span class="currency">(<%= @admin.country.currency_code %>)</span></p>
                <% end %>
              </div>

              <div class="col-sm-8">
                <%= f.number_field(:charge, class: "form-control", required: true, min: 0, step: 0.001, autocomplete: :off) %>
              </div>
            </div>

            <div class="row">
              <div class="col-sm-4">
                <% if is_super_admin?(@admin) %>
                  <p>Min Order Amount <span class="currency"></span></p>
                <% else %>
                  <p>Min Order Amount (<%= @admin.country.currency_code %>)</p>
                <% end %>
              </div>

              <div class="col-sm-8">
                <%= f.number_field(:min_order_amount, class: "form-control", required: true, min: 0, step: 0.001, autocomplete: :off) %>
              </div>
            </div>

            <div class="row">
              <div class="col-sm-4">
                <% if is_super_admin?(@admin) %>
                  <p>Delivery Service <span class="currency"></span></p>
                <% else %>
                  <p>Delivery Service (<%= @admin.country.currency_code %>)</p>
                <% end %>
              </div>

              <div class="col-sm-8">
                <%= f.number_field(:delivery_service, class: "form-control", required: true, min: 0, step: 0.001, autocomplete: :off) %>
              </div>
            </div>

            <div class="modal-footer">
              <button type="button" class="btn btn-danger pull-right" style="margin-left:4px" data-dismiss="modal">Cancel</button>
              <%= f.submit "Submit", class: "btn theme-btn pull-right" %>
            </div>
          </div>
        <% end %>
      </div>
  </div>
</div>