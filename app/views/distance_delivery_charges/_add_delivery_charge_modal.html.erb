<div class="modal fade" id="add_delivery_charge_modal" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog" role="document">
      <div class="modal-content">
        <center><div id="showimage"></div></center>

        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">Edit Food Club Fixed Delivery Charge</h4>
        </div>

        <%= form_tag new_fixed_charge_distance_delivery_charges_path, html: { class: "form-horizontal" } do %>
          <div class="modal-body">
            <div class="row">
              <div class="col-sm-4">
                <p>Charge (%)</p>
              </div>

              <div class="col-sm-8">
                <%= number_field_tag(:delivery_percentage, nil, class: "form-control", required: true, min: 0, step: 0.001, autocomplete: :off) %>
              </div>
            </div>

            <% if is_super_admin?(@admin) %>
              <div class="row">
                <div class="col-sm-4">
                  <p>Country</p>
                </div>

                <div class="col-sm-8">
                  <%= select_tag(:charge_country_id, options_for_select(Country.pluck(:name, :id).sort), prompt: "Select Country", class: "form-control", required: true) %>
                </div>
              </div>
            <% end %>

            <div class="modal-footer">
              <button type="button" class="btn btn-danger pull-right" style="margin-left:4px" data-dismiss="modal">Cancel</button>
              <%= submit_tag "Submit", class: "btn theme-btn pull-right" %>
            </div>
          </div>
        <% end %>
      </div>
  </div>
</div>