$(".delivery-company-state-list, .delivery-company-district-list, .delivery-company-zone-list").html("").addClass("hide")

<% if @states.present? %>
  $(".delivery-company-state-list").removeClass("hide");
  $(".delivery-company-state-list").html('<%= escape_javascript select_tag(:state, options_for_select(@states), class: "form-control delivery-company-state-select select2_state", style: "height: 34px", multiple: true) %>')
<% end %>

